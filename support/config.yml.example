# podman, docker or auto
# auto will select whichever is available
container_runtime: auto

# when using as self-hosted agent
apikey: ''
apihost: 'https://web.omnipackage.org'

# these directories must be writeable by user under which you run agent
build_dir: "<%= ::Dir.tmpdir %>/omnipackage-build"
lockfiles_dir: "<%= ::Dir.tmpdir %>/omnipackage-lock"

# optionally enable image cache to reduce subsequent build time in expense of storage space
image_cache_enable: false

# optionally disable cpu/memory limits in child containers
container_limits_disable: false

# in signle-shot mode the agent will wait for a build task and quit after finishing it
single_shot: false
single_shot_wait_sec: 300
